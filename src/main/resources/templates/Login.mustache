{{>parts/LogRegTemplate}}

<h3 class="header text-center mb-5">Добро пожаловать</h3>
{{#messageActivation}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong> {{messageActivation}}</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/messageActivation}}

<div class="card cloudyGlass">
    <div class="card-body content">
        <form action="/login" method="post">
            <div class="logInput">
                <label> Имя пользователя:</label>
                <input class="form-control mb-3" type="text" name="username"/>

                <label> Пароль:</label>
                <input class="form-control" type="password" name="password"/>
            </div>
            <div class="logBtn">
                <input type="hidden" name="_csrf" value="{{_csrf.token}}">
                <input class="btn btn-primary btn-block" type="submit" value="Войти"/>
                <a href="/registration" class="btn btn-light btn-block mt-2">Регистрация</a>
            </div>
        </form>
    </div>
</div>


<script src="/static/bootstrap/js/jquery-3.5.1.min.js"></script>
<script src="/static/bootstrap/js/bootstrap.js"></script>
</body>
</html>