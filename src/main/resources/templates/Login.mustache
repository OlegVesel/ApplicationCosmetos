{{>parts/logRegTemplate}}

<h3 class="header text-center mb-5">Добро пожаловать</h3>
        <div class="card cloudyGlass">

            <div class="card-body content">
                <form action="/login" method="post">
                    <label> Имя пользователя:</label>
                    <input class="form-control mb-3" type="text" name="username" />

                    <label> Пароль:</label>
                    <input class="form-control" type="password" name="password"/>

                    <div class="logBtn">
                        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
                        <input class="btn btn-primary btn-block" type="submit" value="Войти" />
                        <a href="/registration" class="btn btn-light btn-block mt-2">Регистрация</a>
                    </div>
                </form>
            </div>
        </div>


